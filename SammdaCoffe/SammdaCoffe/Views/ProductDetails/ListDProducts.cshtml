@model IEnumerable<SammdaCoffe.Models.ProductDetail>

@{
    ViewBag.Title = "ListDProducts";
}

<h2>Productos</h2>

<script>
            document.getElementById("sesion").style.display = "block";
            document.getElementById("salir").style.display = "none";
</script>

@foreach (var item in Model)
{
    <article class="product-item">
        <h3 class="product-name">@Html.DisplayFor(modelItem => item.Product.productName)</h3>
        <p class="product-info">Size: <span>@Html.DisplayFor(modelItem => item.size)</span></p>
        <p class="product-info">Price: <span>@Html.DisplayFor(modelItem => item.productPrice)</span></p>
        <p class="product-description">@Html.DisplayFor(modelItem => item.descriptionProduct)</p>
        <a href="../Recipes/ListRecipes/@item.Product.productID" class="btn">Receta</a>
    </article>

}
<style>
    .product-item {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .product-item .product-info {
            display: flex;
            align-items: center;
            margin-right: 10px;
            margin-bottom: 10px;
        }

            .product-item .product-info span {
                display: inline-block;
                padding: 5px;
                background-color: #f2f2f2;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

        .product-item .product-name {
            flex-basis: 100%;
            margin-bottom: 10px;
        }

        .product-item .product-description {
            flex-basis: 100%;
            margin-bottom: 10px;
        }

        .product-item .btn {
            display: block;
            width: 100px;
            padding: 10px;
            text-align: center;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
</style>