@model IEnumerable<SammdaCoffe.Models.ProductDetail>

@{
    ViewBag.Title = "ListDProducts";
}
<link href="~/css/tables/Create.css" rel="stylesheet" />
<h2>Productos</h2>


@foreach (var item in Model)
{
    <article>

        <script>
            document.getElementById("sesion").style.display = "block";
            document.getElementById("salir").style.display = "none";
        </script>

        @Html.DisplayNameFor(model => model.Product.productName)
        @Html.DisplayFor(modelItem => item.Product.productName)<br />

        @Html.DisplayNameFor(model => model.size)
        @Html.DisplayFor(modelItem => item.size)<br />

        @Html.DisplayNameFor(model => model.productPrice)
        @Html.DisplayFor(modelItem => item.productPrice)<br />

        @Html.DisplayNameFor(model => model.descriptionProduct)
        @Html.DisplayFor(modelItem => item.descriptionProduct)<br />

        @Html.ActionLink("Receta", "../Recipes/ListRecipes", new { id = item.Product.productID, @class = "btn" })
    </article>
}
